<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table class = "table table-striped">
  <thead>
    <tr>
      <th>Address</th>
      <th>City</th>
      <th>Postalcode</th>
      <th>Phonenumber</th>
      <th>Province</th>
      <th>Size</th>
      <th>Toppings</th>
      <th>Crust</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.Address %></td>
        <td><%= order.City %></td>
        <td><%= order.PostalCode %></td>
        <td><%= order.PhoneNumber %></td>
        <td><%= order.Province %></td>
        <td><%= order.Size %></td>
        <td><%= order.Toppings %></td>
        <td><%= order.Crust %></td>
        <td><%= number_to_currency(order.Price) %></td>
        <td><%= link_to 'Show', order , :class => 'btn btn-primary'%></td>
        <td><%= link_to 'Edit', edit_order_path(order), :class => 'btn btn-success' %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order' , new_order_path, :class => 'btn btn-warning' , :id => 'new_order_id'%>
