                                <h3 class="panel-title">Pizza Size</h3>
                        </div>
                            <div class="panel-body">
                                <p id="message"></p>
                                
                              <div class="form-group">
                                      <%= f.label :Size %><br>
                                      <%= f.radio_button("Size", "Small", :value => "Small") %>
                                          <%= label_tag(:Small, "Small") %><br>
                                      <%= f.radio_button("Size", "Medium", :value => "Medium") %>
