                                <h3 class="panel-title">Address Information</h3>
                        </div>
                            <div class="panel-body">
                                <p id="message"></p>
                                
                                <div class="form-group">
                                    <%= f.label :Address %><br>
                                    <%= f.text_field :Address %>
                                </div>
                                <div class="form-group">
                                     <%= f.label :City %><br>
                                     <%= f.text_field :City %>
