<p id="notice"><%= notice %></p>
  <div class = "container" id="Order_recipt">
 
         <div class="panel panel-primary" id="Order_recipt_pannel">
                <div class="panel-heading">
                    <h3 class="panel-title">Your Order Information</h3>
                </div>
                <div class="panel-body">
                    <p id="message"></p>
                        <div class="form-group">
                               <strong>Address:</strong>
                               <%= @order.Address %>
                        </div>
                       <div class="form-group">
                               <strong>City:</strong>
                               <%= @order.City %>
                        </div>
                        <div class="form-group">
                                <strong>Postalcode:</strong>
                                <%= @order.PostalCode %>
                        </div>
                        <div class="form-group">
                                <strong>Phonenumber:</strong>
                                <%= @order.PhoneNumber %>
                        </div>
                        <div class="form-group">
                              <strong>Province:</strong>
                              <%= @order.Province %>
                        </div>
                        <div class="form-group">
                             <strong>Size:</strong>
                             <%= @order.Size %>
                        </div>
                        <div class="form-group">
                              <strong>Toppings:</strong>
                              <%= @order.Toppings %>
                        </div>
                        <div class="form-group">
                              <strong>Crust:</strong>
                              <%= @order.Crust %>
                        </div>
                        <div class="form-group">
                             <strong>Price:</strong>
                             <%= number_to_currency(@order.Price) %>
                        </div>
                </div>        
     <div id="Order_recipt_Button">
    <%= link_to 'Edit', edit_order_path(@order) ,:class => 'btn btn-success' %> 
    <%= link_to 'Back', orders_path ,:class => 'btn btn-danger'%>
    </div>
    </div>
</div>