<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"
             integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
  <%= csrf_meta_tags %>
</head>
    <body>
        <div class="container">
            <div class="jumbotron" id="heading">
                       <div class="container">
                      
                        <h1>Conestoga Pizzeria</h1>
                    </div>
            </div>
            <div class="container">
                <div  class="navbar navbar-inverse">
                    <div class="navbar-header">
                        <ul class="nav navbar-nav">
                            <li><%= link_to ' Home', home_index_path(@user) ,:class => 'glyphicon glyphicon-home' %> </li>
                            <li><%= link_to ' Order', :class => 'glyphicon glyphicon-heart-empty' %> </li>
                            
                           <li><%= if(!user_signed_in?)
                                 link_to "Log in", new_user_session_path, :class => 'btn btn-warning' ,:id => 'login_hide'
                                 end %>
                            </li>
                        </ul>
                     </div>
               </div>
           </div>
        </div>  
        
        <div class="container">
                  <%= if(user_signed_in? && current_user.admin?)
                     link_to "List Orders", orders_path, :class => 'btn btn-primary'
                   end %>
        
                  <%= if(user_signed_in? && current_user.admin?)
                     link_to "List Users", users_path, :class => 'btn btn-info'
                   end %>
                   
                 
                   <%= if(user_signed_in? && !current_user.admin?)
                     link_to "Edit My Profile", edit_user_registration_path, :class => 'btn btn-info'
                   end %>
                   
                   <%= if(user_signed_in? && !current_user.admin?)
                     link_to "Order Here",  new_order_path, :class => 'btn btn-warning'
                   end %>
                   
                   
                   <%= if(user_signed_in?)
                     link_to "Log out", destroy_user_session_path, :method => :delete, :class => 'btn btn-danger'
                   end %>
                   
            <%= yield %>
        </div>
    </body>
</html>
